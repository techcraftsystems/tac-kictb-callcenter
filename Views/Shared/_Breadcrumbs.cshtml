@model Core.ViewModel.Breadcrumbs;
@{
    var l1 = Model.Level1;
    var l2 = Model.Level2;
    var l3 = Model.Level3;
    var l4 = Model.Level4;
}

<div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
    <!-- Search for small screen-->
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title mt-0 mb-0">@ViewData["Title"]</h5>
                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>

                    @if (!string.IsNullOrEmpty(l1.Label)) {
                        if (!string.IsNullOrEmpty(l1.Url)) {
                            <li class="breadcrumb-item">
                                <a href="@l1.Url">@l1.Label</a>
                            </li>
                        }
                        else {
                            <li class="breadcrumb-item active">
                                @l1.Label
                            </li>
                        }
                    }

                    @if (!string.IsNullOrEmpty(l2.Label)) {
                        if (!string.IsNullOrEmpty(l2.Url)) {
                            <li class="breadcrumb-item">
                                <a href="@l2.Url">@l2.Label</a>
                            </li>
                        }
                        else {
                            <li class="breadcrumb-item active">
                                @l2.Label
                            </li>
                        }
                    }

                    @if (!string.IsNullOrEmpty(l3.Label)) {
                        if (!string.IsNullOrEmpty(l3.Url)) {
                            <li class="breadcrumb-item">
                                <a href="@l3.Url">@l3.Label</a>
                            </li>
                        }
                        else {
                            <li class="breadcrumb-item active">
                                @l3.Label
                            </li>
                        }
                    }

                    @if (!string.IsNullOrEmpty(l4.Label)) {
                        if (!string.IsNullOrEmpty(l4.Url)) {
                            <li class="breadcrumb-item">
                                <a href="@l4.Url">@l4.Label</a>
                            </li>
                        }
                        else {
                            <li class="breadcrumb-item active">
                                @l4.Label
                            </li>
                        }
                    }
                </ol>
            </div>
            <div class="col s2 m6 l6">
                <a class="btn dropdown-settings waves-effect waves-light breadcrumbs-btn right" href="#!" data-target="dropdown1"><i class="material-icons hide-on-med-and-up">settings</i><span class="hide-on-small-onl">Settings</span><i class="material-icons right">arrow_drop_down</i></a>
                <ul class="dropdown-content" id="dropdown1" tabindex="0">
                    <li tabindex="0"><a class="grey-text text-darken-2" href="user-profile-page.html">Profile<span class="new badge red">2</span></a></li>
                    <li tabindex="0"><a class="grey-text text-darken-2" href="app-contacts.html">Contacts</a></li>
                    <li tabindex="0"><a class="grey-text text-darken-2" href="page-faq.html">FAQ</a></li>
                    <li class="divider" tabindex="-1"></li>
                    <li tabindex="0"><a class="grey-text text-darken-2" href="user-login.html">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>